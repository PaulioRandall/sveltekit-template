{
	"name": "sveltekit-template",
	"version": "0.1.0",
	"type": "module",
	"engines": {
		"node": "18.12.1",
		"npm": "8.19.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/PaulioRandall/sveltekit-template.git"
	},
	"scripts": {
		"clean": "rm -rf .svelte-kit .vercel",
		"fmt": "npx prettier --loglevel warn --write --plugin-search-dir=. .",
		"build": "npm run fmt && vite build",
		"dev": "npm run fmt && vite dev --port 3000",
		"preview": "npm run build && vite preview --port 3000",
		"===========================#===========================": "",
		"check": "jsonlint -qd ./src && jsonlint -qd ./static",
		"test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
		"test": "npm run check && npm run test:jest",
		"behave:start": "vite preview --port 4000",
		"behave:cypress": "cypress run --headless -b electron",
		"behave": "start-server-and-test \"npm run behave:start\" http://localhost:4000 \"npm run behave:cypress\"",
		"==========================#=#==========================": "",
		"commit": "npm run build && npm run test && npm run behave && cat ./scripts/well-done.txt",
		"=========================#=#=#=========================": "",
		"auto:build": "npm run build",
		"auto:test": "npm run test",
		"TODO": "How to get Cypress to work with Vercel?"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "2.0.0",
		"@sveltejs/kit": "1.11.0",
		"cypress": "12.5.1",
		"jest": "29.5.0",
		"jsonlint-dir": "1.7.0",
		"prettier": "2.8.4",
		"prettier-plugin-svelte": "2.9.0",
		"start-server-and-test": "2.0.0",
		"svelte": "3.55.1",
		"vite": "4.1.4"
	},
	"dependencies": {
		"svelte-preprocess-import-assets": "0.2.5"
	}
}
